<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:background="@color/black"
            android:id="@+id/view1">
        </View>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="frrvfvcvdvdf"
            android:id="@+id/title"
            android:textSize="@dimen/_19sdp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/view1"
            app:layout_constraintStart_toStartOf="@+id/view1"
            app:layout_constraintEnd_toEndOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="@+id/view1"
            android:fontFamily="@font/txt_bold">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fedfefded"
            android:id="@+id/person"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/txt_medium"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintLeft_toLeftOf="@+id/view1"
            android:layout_marginTop="@dimen/_10sdp">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/txt_medium"
            android:id="@+id/price"
            android:text="rfedfcfcd"
            app:layout_constraintTop_toBottomOf="@+id/person"
            app:layout_constraintLeft_toLeftOf="@+id/person">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/clock"
            android:id="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_3sdp">
        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cdcdecdcds"
            android:id="@+id/time"
            app:layout_constraintLeft_toRightOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/price"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="@+id/image"
            app:layout_constraintBottom_toBottomOf="@+id/image">
        </androidx.appcompat.widget.AppCompatTextView>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@color/cardview_shadow_start_color"
            app:layout_constraintTop_toBottomOf="@+id/time"
            android:id="@+id/view2"
            android:layout_marginTop="@dimen/_5sdp">
        </View>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="gbbvgrfvrfvf"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintLeft_toLeftOf="@+id/view2"
            android:src="@drawable/clock">
        </androidx.appcompat.widget.AppCompatImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>