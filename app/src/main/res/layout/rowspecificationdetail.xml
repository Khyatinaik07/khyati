<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"></import>

        <variable
            name="serviceResult"
            type="data.model.api.servicepackage2.Specification" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/imgrv"></androidx.appcompat.widget.AppCompatImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imgrv"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:layout_marginTop="@dimen/_10sdp">
        </androidx.recyclerview.widget.RecyclerView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/person"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/txt_bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@{serviceResult.getTitle()}"
            android:textSize="@dimen/_16sdp"
            android:singleLine="false"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/img"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/txt_medium"
            android:text="@{'\u20B9'+serviceResult.getAmount()}"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/person"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:src="@drawable/clock"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/price"></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="@{serviceResult.getTime()+`min`}"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintLeft_toRightOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintTop_toTopOf="@+id/image"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_27sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/img"
            app:layout_constraintLeft_toLeftOf="@+id/number"
            android:background="@drawable/leftroundedshape"
            app:layout_constraintRight_toRightOf="parent"
            android:text="-"
            android:clickable="true"
            android:layout_marginRight="@dimen/_100sdp"
            android:padding="@dimen/_7sdp"
            android:textAlignment="center"
            android:textSize="@dimen/_17sdp"
            android:fontFamily="@font/txt_bold"
            app:layout_constraintTop_toTopOf="@+id/price"
            android:id="@+id/minus"
            app:layout_constraintBottom_toBottomOf="@+id/price"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/minus"
            app:layout_constraintBottom_toBottomOf="@+id/minus"
            android:id="@+id/number"
            app:layout_constraintLeft_toRightOf="@+id/minus"
            android:text="0"
            android:background="@drawable/textviewborder"
            android:textSize="@dimen/_17sdp"
            android:fontFamily="@font/txt_bold"
            android:padding="@dimen/_7sdp"
            android:textAlignment="center">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_27sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/img"
            android:background="@drawable/rightroundedshape"
            app:layout_constraintLeft_toRightOf="@+id/number"
            android:text="+"
            android:clickable="true"
            android:layout_marginRight="@dimen/_50sdp"
            android:padding="@dimen/_7sdp"
            android:textAlignment="center"
            android:textSize="@dimen/_17sdp"
            android:fontFamily="@font/txt_bold"
            app:layout_constraintTop_toTopOf="@+id/price"
            android:id="@+id/plus"
            app:layout_constraintBottom_toBottomOf="@+id/price"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/time"></androidx.appcompat.widget.AppCompatTextView>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/cardview_shadow_start_color"
            app:layout_constraintTop_toBottomOf="@+id/conViewDetail"></View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/conViewDetail">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/next"
                android:id="@+id/next"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewall"
                app:layout_constraintTop_toTopOf="@+id/viewall"
                app:layout_constraintBottom_toBottomOf="@+id/viewall"
                android:tint="@color/colorAccent">
            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/txt_bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/viewall"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/conViewDetail"
                android:text="@string/view_all">
            </androidx.appcompat.widget.AppCompatTextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>