<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="activity.home.servicepackagelayout1.ServicePackageLayoutOneActivity"
    tools:showIn="@layout/activity_service_package_layout1">

    <data>
        <import type="android.view.View"></import>
        <variable
            name="serviceLayoutoneViewModel"
            type="activity.home.servicepackagelayout1.ServiceLayoutOneViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_8sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:fontFamily="@font/txt_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:text="@string/selectpackage"
                    android:textSize="@dimen/_17sdp">
                </androidx.appcompat.widget.AppCompatTextView>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/lightgrey">
                </View>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="none"
                    android:layout_below="@+id/view"
                    android:overScrollMode="never">
                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableTop="@drawable/nobooking"
            android:fontFamily="@font/txt_bold"
            android:text="@string/no_data"
            android:textAlignment="center"
            android:textSize="@dimen/_17sdp">
        </androidx.appcompat.widget.AppCompatTextView>

    </RelativeLayout>
</layout>